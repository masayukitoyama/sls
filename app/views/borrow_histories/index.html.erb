<section class="content-header">
  <h1>貸出履歴</h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
    <li class="active">貸出履歴</li>
  </ol>
</section>
<div id="borrow-history">
  <section class="content borrow-history-block-1">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <%= render 'search_form' %>
            <% if @borrow_histories.present? %>
              <table id="borrow-history-table-1" class="table table-bordered table-striped table-hover dataTable">
                <thead>
                  <tr>
                    <th style="width: 20%">
                      名前
                    </th>
                    <th style="width: 45%">
                      貸出書籍
                    </th>
                    <th style="width: 12%">
                      貸出日
                    </th>
                    <th style="width: 12%">
                      返却期限日
                    </th>
                    <th style="width: 12%">
                      返却状態
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% @borrow_histories.each do |borrow_history| %>
                    <tr class="cursor-pointer" v-on:click='showBookDetail("<%= borrow_history.id %>")'>
                      <td>
                        <%= borrow_history.user.user_name %>
                      </td>
                      <td>
                        <%= borrow_history.book.title %>
                      </td>
                      <td>
                        <%= jp_date(borrow_history.created_at) %>
                      </td>
                      <td>
                        <%= borrow_history.return_limit_date %>
                      </td>
                      <td>
                        <%= get_return_status_label(borrow_history.return_status) %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% else %>
              <div class="col-sm-12 search_empty_msg">
                <p> <%= t('errors.messages.search_empty') %></p>
              </div>
            <% end %>
          </div><!-- box-body -->
        </div><!-- box -->
      </div>
    </div><!-- row -->
  </section>
</div>
